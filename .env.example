# Core application settings
DATABASE_URL=postgresql://postgres:postgres@db:5432/securevault
SECRET_KEY=replace-me-with-output-of-scripts-generate_secret-sh
# Choose exactly one of the two options below
MASTER_KEY=replace-me-with-output-of-scripts-generate_secret-sh
KMS_KEY_ID=

# AWS / object storage
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=localstack
AWS_SECRET_ACCESS_KEY=localstack
S3_BUCKET_NAME=securevault-local
# Optional: needed when running against MinIO or another S3-compatible endpoint
S3_ENDPOINT_URL=http://minio:9000

# Email delivery
EMAIL_FROM=security@example.com
EMAIL_PROVIDER=smtp  # options: smtp, sendgrid, console
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=465
SMTP_USERNAME=postmaster@example.com
SMTP_PASSWORD=change-me
SENDGRID_API_KEY=

# Outbound password reset links
FRONTEND_BASE_URL=http://localhost:3000

# Background jobs / misc
TESTING=0
